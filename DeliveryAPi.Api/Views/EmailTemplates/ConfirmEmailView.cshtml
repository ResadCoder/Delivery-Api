@model DeliveryAPI.Infrastructure.Models.SendConfirmOtpViewModel
@{
    
 
    var minutesLeft = (Model.expirationDate - DateTime.UtcNow).TotalMinutes;
    
    var roundedMinutes = minutesLeft > 0 
        ? Math.Ceiling(minutesLeft) 
        : 0;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Your OTP Code</title>
</head>
<body style="margin:0; padding:0; font-family: Arial, sans-serif; background-color:#f4f4f4;">
    <table width="100%" cellpadding="0" cellspacing="0" style="background-color:#f4f4f4; padding: 20px 0;">
        <tr>
            <td align="center">
                <table width="600" cellpadding="0" cellspacing="0" style="background-color:#ffffff; border-radius:8px; overflow:hidden; box-shadow:0 2px 8px rgba(0,0,0,0.1);">
                    <!-- Header -->
                    <tr>
                        <td align="center" style="background-color:#007BFF; color:#ffffff; padding:20px; font-size:24px; font-weight:bold;">
                            Delivery API
                        </td>
                    </tr>
                    <!-- Body -->
                    <tr>
                        <td style="padding:30px; color:#333333; font-size:16px; line-height:1.5;">
                            <p>Hi there,</p>
                            <p>Your OTP code is:</p>
                            <p style="text-align:center; font-size:32px; font-weight:bold; color:#007BFF; margin:20px 0;">
                                @Model.otpCode
                            </p>
                            <p>This code will expire in <strong>@roundedMinutes minutes</strong>.</p>

                            <p>If you did not request this code, please ignore this email.</p>
                            <p>Thank you,<br/>Delivery API Team</p>
                        </td>
                    </tr>
                    <tr>
                        <td align="center" style="background-color:#f1f1f1; color:#666666; font-size:12px; padding:15px;">
                            &copy; 2025 Delivery API. All rights reserved.
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>